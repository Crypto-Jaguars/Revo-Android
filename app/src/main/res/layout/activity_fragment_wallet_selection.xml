<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/neutro"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Título -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/choose_your"
        android:textAppearance="@style/TitleText"
        android:gravity="center"
        android:paddingBottom="8dp" />

    <!-- Lista de wallets -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/walletList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/neutro"/>

    <!-- Botón "View QR code instead" -->
    <TextView
        android:id="@+id/viewQRText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/view_qr_cod"
        android:textAppearance="@style/ViewQRText"
        android:gravity="center"
        android:paddingTop="10dp"
        android:paddingBottom="10dp" />
</LinearLayout>
