<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.FideicomisoApproverRing" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:windowLightStatusBar">true</item>
        <item name="colorPrimary">#141218</item>
        <item name="colorPrimaryVariant">#2D2535</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">#D0BCFE</item>
        <item name="colorSecondaryVariant">#B69EE9</item>
        <item name="colorOnSecondary">#000000</item>
        <item name="colorSurface">#1C1B1F</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="colorOnSurfaceVariant">#CAC4D0</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.MaterialComponents.Headline5</item>
        <item name="textAppearanceBody1">@style/TextAppearance.MaterialComponents.Body1</item>
        <item name="textInputStyle">@style/Widget.Design.TextInputLayout</item>
        <item name="fontFamily">@font/poppins</item>
    </style>

    <style name="LabelHintAppearance" parent="@android:style/TextAppearance">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Shape Appearance for small components like chips, buttons, text fields and FABs. -->
    <style name="ShapeAppearance.App.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="Widget.Design.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxStrokeWidthFocused">2dp</item>
    </style>

    <style name="ThemeOverlay.Material3.Button">
        <item name="android:background">#4A4458</item>
    </style>

    <style name="ThemeOverlay.AppTheme.TextInputEditText.Outlined" parent="">
        <item name="colorControlActivated">#D0BCFE</item>
    </style>


    <style name="TitleText">
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">-0.05</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="WalletText">
        <item name="android:textSize">20sp</item>
        <item name="android:letterSpacing">-0.04</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>


    <style name="ViewQRText">
        <item name="android:textSize">15sp</item>
        <item name="android:letterSpacing">-0.04</item>
        <item name="android:textColor">#8D9099</item>
    </style>

    <style name="Theme.App.Dialog.FullWidth" parent="Theme.MaterialComponents.DayNight.Dialog">
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

</resources>