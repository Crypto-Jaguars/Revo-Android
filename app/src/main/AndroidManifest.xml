<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.NFC" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <queries>
        <package android:name="com.lobstr.client" />
        <intent>
            <action android:name="android.intent.action.VIEW" />
            <data android:scheme="lobstr" />
        </intent>
    </queries>

    <application
        android:name=".FideicomisoapproverringApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FideicomisoApproverRing"
        tools:targetApi="31">
        
        <!-- Main entry point -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.FideicomisoApproverRing">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Transaction Recovery Test Activity -->
        <activity
            android:name=".recovery.ui.TransactionRecoveryTestActivity"
            android:exported="true"
            android:label="@string/transaction_recovery_title"
            android:theme="@style/Theme.FideicomisoApproverRing" />

        <!-- Transaction Recovery Status Activity -->
        <activity
            android:name=".recovery.ui.RecoveryStatusActivity"
            android:exported="false"
            android:label="@string/transaction_recovery_title"
            android:theme="@style/Theme.FideicomisoApproverRing" />

        <activity
            android:name=".EngagementActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.FideicomisoApproverRing" />

        <activity
            android:name=".EscrowApproverActivity"
            android:exported="false"
            android:theme="@style/Theme.FideicomisoApproverRing" />

        <activity
            android:name=".EscrowDetailsActivity"
            android:exported="false"
            android:parentActivityName=".FindEscrowActivity"
            android:theme="@style/Theme.FideicomisoApproverRing" />

        <activity
            android:name=".FindEscrowActivity"
            android:exported="false"
            android:label="@string/titleText"
            android:theme="@style/Theme.FideicomisoApproverRing" />

        <activity
            android:name=".ProductGridActivity"
            android:exported="true"
            android:theme="@style/Theme.FideicomisoApproverRing" />

        <activity
            android:name=".ErrorPageActivity"
            android:exported="false"
            android:theme="@style/Theme.FideicomisoApproverRing" />
    </application>

</manifest>