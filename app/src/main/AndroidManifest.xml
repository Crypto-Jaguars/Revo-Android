<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <queries>
        <package android:name="com.lobstr.client" />
        <intent>
            <action android:name="android.intent.action.VIEW" />
            <data android:scheme="lobstr" />
        </intent>
    </queries>

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        tools:replace="android:theme"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light"
        tools:targetApi="34">
        <activity
            android:name=".EngagementActivity"
            android:exported="false" />
        <activity
            android:name=".EscrowApproverActivity"
            android:exported="false"
            android:theme="@style/Theme.FideicomisoApproverRing" />

        <activity
            android:name=".EscrowDetailsActivity"
            android:exported="false"
            android:parentActivityName=".FindEscrowActivity"
            android:theme="@style/Theme.FideicomisoApproverRing" />

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".FindEscrowActivity"
            android:exported="false"
            android:label="@string/titleText"
            android:theme="@style/Theme.FideicomisoApproverRing">
        </activity>
        <activity
            android:name=".ProductGridActivity"
            android:exported="true"
            android:theme="@style/Theme.FideicomisoApproverRing">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ErrorPageActivity"
            android:exported="false"
            android:theme="@style/Theme.FideicomisoApproverRing" />
        <activity
            android:name=".ImagePickerActivity"
            android:exported="false" />
        <activity android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:theme="@style/Base.Theme.AppCompat"/>
        <activity
            android:name=".ui.ImageEditorActivity"
            android:exported="false" />
        <activity
            android:name=".ui.MultipleImagesActivity"
            android:exported="false" />
</application>

</manifest>